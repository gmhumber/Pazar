    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Use this form to create your new listing.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="CategoryId" class="control-label col-md-2">Category</label>
        <div class="col-md-10">
            <select name="CategoryId" class="form-control">
                @foreach (var e in Model.allCatagories)
                {
                    <option value="@e.CategoryId">@e.Category</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="TypeId" class="control-label col-md-2">Type of Ad</label>
        <div class="col-md-10">
            <select name="TypeId" class="form-control">
                @foreach (var e in Model.allTypes)
                {
                    <option value="@e.TypeId">@e.Type</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Title" class="control-label col-md-2">Title</label>
        <div class="col-md-10">
            <input type="text" name="Title" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="Description" class="control-label col-md-2">Description</label>
