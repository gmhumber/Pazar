            <input type="text" name="Description" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="Price" class="control-label col-md-2">Price</label>
        <div class="col-md-10">
            <input type="number" step=".01" min="0.00" name="price" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="Location" class="control-label col-md-2">Location</label>
        <div class="col-md-10">
            <input type="text" name="Location" class="form-control text-box single-line" />
        </div>
    </div>


