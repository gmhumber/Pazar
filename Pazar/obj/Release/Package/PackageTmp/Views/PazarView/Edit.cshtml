@model Pazar.Models.Viewmodels.AdCrudModel

@{
    ViewBag.Title = "Edit Listing";
}

<h2>Edit Your Listing</h2>


@using (Html.BeginForm("Edit", "PazarView", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Use this form to edit your listing.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" name="AdId" value="@ViewBag.EditAd.AdId">
    <input type="hidden" name="ApplicationUserId" value="@ViewBag.EditAd.ApplicationUserId">
    <input type="hidden" name="ApplicationUserId" value="@ViewBag.EditAd.ApplicationUserId">


    <div class="form-group">
        <label for="CategoryId" class="control-label col-md-2">Category</label>
        <div class="col-md-10">
            <select name="CategoryId" class="form-control">
                @foreach (var e in Model.allCatagories)
                {
                    <option value="@e.CategoryId" @(e.CategoryId == ViewBag.EditAd.CategoryId ? "selected" : "")>@e.Category</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="TypeId" class="control-label col-md-2">Type of Ad</label>
        <div class="col-md-10">
            <select name="TypeId" class="form-control">
                @foreach (var e in Model.allTypes)
                {
                    <option value="@e.TypeId" @(e.TypeId == ViewBag.EditAd.TypeId ? "selected" : "")>@e.Type</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="Title" class="control-label col-md-2">Title</label>
        <div class="col-md-10">
            <input type="text" name="Title" class="form-control text-box single-line" value="@ViewBag.EditAd.Title" />
        </div>
    </div>

    <div class="form-group">
        <label for="Description" class="control-label col-md-2">Description</label>
        <div class="col-md-10">
            <input type="text" name="Description" class="form-control text-box single-line" value="@ViewBag.EditAd.Description" />
        </div>
    </div>

    <div class="form-group">
        <label for="Price" class="control-label col-md-2">Price</label>
        <div class="col-md-10">
            <input type="number" step=".01" min="0.00" name="price" class="form-control text-box single-line" value="@ViewBag.EditAd.Price" />
        </div>
    </div>

    <div class="form-group">
        <label for="Location" class="control-label col-md-2">Location</label>
        <div class="col-md-10">
            <input type="text" name="Location" class="form-control text-box single-line" value="@ViewBag.EditAd.Location" />
        </div>
    </div>

    <div class="form-group">
        <label for="ListingPic" class="control-label col-md-2">Attach image:</label>
        <div class="col-md-10">
            <input type="file" id="ListingPic" name="ListingPic">
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back To My Listings", "ShowUserAds", "PazarView")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
