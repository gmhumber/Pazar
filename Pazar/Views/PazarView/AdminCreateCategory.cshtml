

@{
    ViewBag.Title = "Create Listing Category";
}

<h2>Create New Listing Category</h2>

<p class="text-danger">This area is restricted to administrators only.</p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Use this form to create your new listing.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label for="Category" class="control-label col-md-2">New Category Name</label>
            <div class="col-md-10">
                <input type="text" name="Category" class="form-control text-box single-line" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Category" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back To Dashboard", "Index", "Manage")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
